@page
@model SalesTracker.Pages.StoreItems.CreateModel

@{
    ViewData["Title"] = "Create";
}

    <h1>Enter a StoreItem</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StoreItem.ItemName" class="control-label"></label>
                <input asp-for="StoreItem.ItemName" class="form-control" />
                <span asp-validation-for="StoreItem.ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreItem.DepartmentId" class="control-label"></label>
                <select asp-for="StoreItem.DepartmentId" class ="form-control" asp-items="ViewBag.DepartmentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StoreItem.CostPrice" class="control-label"></label>
                <input asp-for="StoreItem.CostPrice" class="form-control" />
                <span asp-validation-for="StoreItem.CostPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreItem.SellingPrice" class="control-label"></label>
                <input asp-for="StoreItem.SellingPrice" class="form-control" />
                <span asp-validation-for="StoreItem.SellingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model SalesTracker.Pages.AwardsNotices.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Award / Notice</h1>

<h4>AwardNotice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AwardNotice.Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AwardNotice.isNotice" /> @Html.DisplayNameFor(model => model.AwardNotice.isNotice)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AwardNotice.EntryDate" class="control-label"></label>
                <input asp-for="AwardNotice.EntryDate" class="form-control" />
                <span asp-validation-for="AwardNotice.EntryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwardNotice.SalesPersonId" class="control-label"></label>
                <select asp-for="AwardNotice.SalesPersonId" class="form-control" asp-items="ViewBag.SalesPersonId"></select>
                <span asp-validation-for="AwardNotice.SalesPersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

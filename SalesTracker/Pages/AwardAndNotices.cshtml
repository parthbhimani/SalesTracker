@page
@model SalesTracker.Pages.AwardAndNoticesModel
@{
    ViewData["Title"] = "Awards and Notices";
}

<h1>Recent Awards and Notices</h1>
<hr />
<div class="col-md-12">
    <div class="col-md-6 float-md-left">
    <table class="table table-dark table-striped">
        <thead>
            <tr><td colspan="2"><h4>Awards</h4></td></tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AwardsAndNotices.OrderByDescending(x => x.EntryDate))
            {
                @if (item.IsAward)
                {
                    <tr>
                        <td>@item.SalesPerson.DisplayName</td>
                        <td>@item.EntryDate.ToShortDateString()</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
    <div class="col-md-6 float-md-right">
        <table class="table table-dark table-striped">
            <thead>
                <tr><td colspan="2"><h4>Notices</h4></td></tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AwardsAndNotices.OrderByDescending(x => x.EntryDate))
                {
                    @if (item.isNotice)
                    {
                        <tr>
                            <td>
                                @item.SalesPerson.DisplayName
                            </td>
                            <td>@item.EntryDate.ToShortDateString()</td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>